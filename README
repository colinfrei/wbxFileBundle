--------------------
DESCRIPTION
--------------------

a Symfony2 Bundle to handle file upload


--------------------
INSTALL
--------------------

# /deps
[wbxFileBundle]
    git=http://github.com/ma2thieu/wbxFileBundle.git
    target=bundles/wbx/FileBundle


--------------------
ENTITY :
--------------------

/**
 * @var \wbx\FileBundle\Entity\File $image
 *
 * @ORM\ManyToOne(targetEntity="\wbx\FileBundle\Entity\File", cascade={"all"})
 * @ORM\JoinColumn(name="image_id", referencedColumnName="id")
 */
private $image;

/**
 * Set image
 *
 * @param \wbx\FileBundle\Entity\File $image
 */
public function setImage(\wbx\FileBundle\Entity\File $image) {
    $this->image = $image;
}

/**
 * Get image
 *
 * @return integer
 */
public function getImage() {
    return $this->image;
}


--------------------
FORM :
--------------------

$builder
    ->add('image', new \wbx\CoreBundle\Form\FileType())


--------------------
CONTROLLER :
--------------------

nothing to do


--------------------
VIEW :
--------------------

{{ form_label(form.image) }}
{{ form_errors(form.image) }}
{% include 'wbxFileBundle:File:embed_one.html.twig' with { 'form' : form.image, 'entity' : entity.image } %}